

<html>
  <head>
    <style>
      body {
        background-color: #1d2126;
        color: white;
        font-size:16px;
        font-family:'Helvetica';
        width:300px;
      }
      input{
      padding:2em;
      outline:2px white dashed;
      }
      input:after{
        content:'Drap files here...';
        display:block;
        padding:1em 0.225em;
        text-align:center;
        font-size:2em;
      }
      output{margin-top:1em;
      display:flex;
      justify-content:space-evenly;
      flex-flow:column;
      font-size:0.90em;
      flex-wrap:nowrap;
      }
      output span{
      padding:1em 0.5em 0.5em;
      }
     
    </style>
  </head>
  
  <body>
  
    <h1>Drag & Drop</h1>
    
    <input type="file" multiple class="dropzone" />
    
    <output></output>
    
    <div class="results"></div>
    
  </body>
  
  <script>
  const input = document.querySelector('input');
  const output = document.querySelector('output');
  const results = document.querySelector('.results'); 
    
    let formData = new FormData();
    
      document.addEventListener("dragenter", function( e ) {
        
      if ( e.target.className == "dropzone"){
          e.target.style.background = "purple";
      }

  }, false);

  document.addEventListener("dragleave", function( e ) {

    // USING CONTAINS
    
      if ( e.target.contains(document.querySelector('.dropzone'))) {
          e.target.style.background = "";
      }

  }, false);
  
  document.addEventListener("drop", function( e ) {
    
      // pre default action (open as link for some elements)
    
      e.preventDefault();
      e.dataTransfer.dropEffect = 'copy';
    
      let fileItem = '';
      const files = e.dataTransfer.files;

    
      // move dragged elem to the selected drop target
    
      if ( e.target.contains(document.querySelector('.dropzone'))) {
          e.target.style.background = "grey";
        
        // loop through files
        
        for(let f, i=0; f=files[i]; i+=1){
          
          // append images to form data
          
          formData.append('file'+[i], f);
          
        
          fileItem += `<span style="color:red;">File Name: ${f.name}</span> `;
 
          if(f.type.match('image')){
          
          fileItem +=  `<span style="color:orange;">File Type: ${f.type}</span> `;

          }
          
        }
        
        
      output.innerHTML += fileItem;
        
      results.setAttribute('style', 'outline:2px dashed grey;padding:1em;width:70%;height:auto;');
      results.innerHTML += `Results of FormData Obj: ${formData.get('file0').name} <br>`;
      results.innerHTML += `Results of FormData Obj: ${formData.get('file1').name} <br>`;
      results.innerHTML += `Results of FormData Obj: ${formData.get('file2').name} <br>`;
      results.innerHTML += `Results of FormData Obj: ${formData.get('file3').name} <br>`;
        
      }
  }, false);
  
  </script>
</html>
